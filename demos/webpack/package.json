{
  "name": "miru-demo-webpack",
  "version": "0.0.1",
  "description": "small demo using 'miru'",
  "scripts": {
    "start": "node ../../index.js -p public --watch bundle.js -w bundle.css --execute 'npm run watch-js' -e 'npm run watch-css'",
    "build-js": "webpack --config webpack.config.js",
    "watch-js": "webpack -w --config webpack.config.js",
    "build-css": "stylus -u nib -r ./styles/app.styl -o ./public/bundle.css",
    "watch-css": "stylus -u nib -w -r ./styles/app.styl -o ./public/bundle.css",
    "cli:watch-js": "webpack -w --entry ./scripts/app.js --output ./public/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "talmobi <talmo.christian@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^1.14.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "nib": "^1.1.2",
    "stylus": "^0.54.5"
  },
  "dependencies": {}
}
